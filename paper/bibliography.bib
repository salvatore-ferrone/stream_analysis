	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {{Nicola C. Amorisco} and Amorisco, N. C. and {Facundo A. Gómez} and Gómez, Facundo A. and {Simona Vegetti} and Vegetti, Simona and {Simon D. M. White} and White, Simon D. M.},
